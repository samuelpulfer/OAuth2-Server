<!-- Copy this file to META_INF/context.xml and adjust the DB settings to your DB -->

<Context>

	<Resource name="jdbc/oauthdb"
		auth="Container"
		type="javax.sql.DataSource"
		driverClassName="org.postgresql.Driver"
		url="jdbc:postgresql://localhost:5432/oauth"
		username="user"
		password="password"
		maxActive="20"
		maxIdle="10"
		maxWait="-1">
	</Resource>
